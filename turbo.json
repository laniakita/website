{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "test": {},
    "test:watch": {
      "cache": false
    },
    "sso": {},
    "lint": {
      "inputs": ["./packages/eslint-config-v9/**", "eslint.config.js"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
