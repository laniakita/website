{
  "extends": "@ahiakea/typescript-config/base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "target": "ES2017"
  },
  "include": [".", "**/*.ts", "**/*.js"],
  "exclude": ["dist", "build", "node_modules"]
}
