{
  "extends": "@ahiakea/typescript-config/nextjs.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "esnext",
      "webworker"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@serwist/next/typings"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs",
    ".eslintrc.js",
    "postcss.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
