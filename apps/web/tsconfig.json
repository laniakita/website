{
  "extends": "@website/typescript-config/nextjs.json",
  "compilerOptions": {
    "target": "es2020",
    "lib": ["DOM", "DOM.Iterable", "esnext", "webworker"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@content/*": ["./content/*"],
      "contentlayer/generated": ["./.contentlayer/generated"],
      "versionVault/compiled": ["./.versionvault/compiled/latest.json"],
      "content-collections": ["./.content-collections/generated"]
    },
    "allowSyntheticDefaultImports": true,
    "types": ["@serwist/next/typings", "bun", "node"],
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", ".contentlayer/generated", "./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "public/sw.js"]
}
